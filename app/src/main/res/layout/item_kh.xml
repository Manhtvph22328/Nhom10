<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/css"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_Kh_img"
            android:src="@drawable/khachhang"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:background="@color/grey"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:textColor="#228125"
                    android:layout_marginLeft="15dp"
                    android:text="Mã:"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:text="#"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Kh_ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:hint="01"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:text="Họ Tên:"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Kh_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="Trình Văn Mạnh"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:text="Điện thoại:"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Kh_soDt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="0123456789"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:text="Địa chỉ:"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Kh_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="123 Trịnh Văn Bô"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item_kh_del"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/delete" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

</LinearLayout>