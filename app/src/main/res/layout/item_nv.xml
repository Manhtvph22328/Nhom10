<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/css"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_Nv_img"
            android:src="@drawable/nvien"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="120dp"
            android:background="@color/grey"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:textColor="#228125"
                    android:layout_marginLeft="10dp"
                    android:text="Mã:"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:text="#"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Nv_ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:hint="01"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="Họ Tên:"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_Nv_ten"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:hint="Trinh Van Manh"
                    android:textColor="#000000"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Sn:"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_Nv_namSinh"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="20/11/2003"
                    android:textSize="15dp"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="300dp"
               android:layout_height="25dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="53dp"
                   android:layout_height="match_parent"
                   android:textColor="#000000"
                   android:layout_marginLeft="10dp"
                   android:text="Email:"
                   android:textSize="17dp"/>
               <TextView
                   android:id="@+id/tv_Nv_mail"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:hint="Manhtvph22328@fpt.edu.vn"
                   android:textSize="16dp" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="Mật khẩu:"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_Nv_mk"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="1234"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item_Nv_del"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/delete" />

    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"/>
</LinearLayout>