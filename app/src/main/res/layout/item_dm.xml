<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/css"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/item_Dm_img"
            android:src="@drawable/baseline_done_all_24"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:background="@color/grey"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:textColor="#228125"
                    android:layout_marginLeft="10dp"
                    android:text="Mã:"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:text="#"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_Dm_ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:hint="01"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="Tên Dmuc:"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tv_Dm_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="Trình Văn Mạnh"
                    android:textSize="17dp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item_dm_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/delete" />

    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"/>
</LinearLayout>