<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/css"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_Hd_img"
            android:src="@drawable/hoadon"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="160dp"
            android:background="@color/grey"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_Dh_mahd"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:hint="HD:"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_Hd_maNv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="   Mã Nv:"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_Hd_makhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:hint="Khách:"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_Hd_Sanpham"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Sản phẩm:"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_Hd_tien"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:hint="Tiền:"
                android:textSize="20dp" />
                <TextView
                    android:id="@+id/tv_Hd_ttoan"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic"
                    android:hint="chuyen khoan"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_Hd_ngay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ngày:"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"/>
</LinearLayout>