<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2EB52E"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bgrlogin2">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="330dp"
                android:background="#D2020202"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_login_TK"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#83D9E6CF"
                    android:textColor="@color/white"
                    android:hint="  Tài khoản" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_login_MK"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#83D9E6CF"
                    android:textColor="@color/white"
                    android:hint="  Mật khẩu"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/chk_luuMK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:text="Lưu mật khẩu" />

                <ImageButton
                    android:id="@+id/btndangnhap"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btndn"/>

                <TextView
                    android:id="@+id/tvquenmk"
                    android:text="Quên Mật khẩu ?"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#007FFF"
                    android:textStyle="bold|italic"
                    android:layout_width="120dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>