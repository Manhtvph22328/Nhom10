<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2020202"
    tools:context=".Fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/bieudo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:src="@drawable/btnday1" />
            <EditText
                android:drawableEnd="@drawable/calendar"
                android:id="@+id/ed_DT_tuNgay"
                android:layout_margin="10dp"
                android:text="  Từ Ngày"
                android:textColor="@color/cream"
                android:background="@color/black50"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:src="@drawable/btnday2" />
            <EditText
                android:drawableEnd="@drawable/calendar"
                android:id="@+id/ed_DT_denNgay"
                android:layout_margin="10dp"
                android:text="  Đến Ngày"
                android:textColor="@color/cream"
                android:background="@color/black50"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvdoanhthu"
            android:layout_margin="20dp"
            android:text=" Doanh thu:"
            android:background="@color/black50"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btndoanhthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/doanhthuuu"
            android:layout_gravity="center"
            android:text="Doanh Thu"
            android:textColor="#1E1D1D"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>

</FrameLayout>