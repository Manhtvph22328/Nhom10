<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/css2"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/dialog_img_Sp"
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/sp" />

        <EditText
            android:id="@+id/dialog_Sp_maSp"
            android:hint="   Mã Sản phẩm"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/dialog_Sp_tenSp"
            android:hint="   Tên sản phẩm"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <Spinner
            android:id="@+id/spn_dialog_Sp_Dm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/lightwhite"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/dialog_Sp_mota"
            android:hint="   Mô tả"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/dialog_Sp_soLuong"
            android:hint="   Số lượng"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/dialog_Sp_Gia"
            android:hint="   Giá"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnhuysp"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnhuy" />
            <ImageButton
                android:id="@+id/btnthemsp"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnthem" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>