<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrlogin2"
    tools:context=".Fragment.DoimkFragment">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="430dp"
        android:background="#D2020202"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/baseline_wifi_protected_setup_24" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_doimk_mkcu"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#83D9E6CF"
            android:textColor="@color/white"
            android:hint="  Mật khẩu cũ" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_doimk_mkmoi"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#83D9E6CF"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:hint="  Mật khẩu mới" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_doimk_mknhaclai"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#83D9E6CF"
            android:textColor="@color/white"
            android:hint="  Mật khẩu nhắc lại"
            android:inputType="textPassword" />

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btndoimk" />

    </LinearLayout>

</FrameLayout>