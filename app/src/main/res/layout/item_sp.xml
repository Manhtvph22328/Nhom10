<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/css"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_Sp_img"
            android:src="@drawable/bgrlogin"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:textColor="#228125"
                        android:layout_marginLeft="10dp"
                        android:text="MÃ£:"
                        android:textSize="18dp"/>
                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:textColor="#FF0000"
                        android:text="#"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/tv_Sp_ma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FF0000"
                        android:hint="01"
                        android:textSize="20dp"/>
                </LinearLayout>
            <TextView
                android:id="@+id/tv_Sp_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:text="Oppo a3S ProXsmax Note11"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_Sp_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="italic"
                android:gravity="center"
                android:text="20.000.000$"
                android:textColor="@color/red"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/item_Sp_ChiTiet"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/chitiet" />
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/item_Sp_thanhToan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/grey"
                    android:layout_weight="1"
                    android:src="@drawable/giohang" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>