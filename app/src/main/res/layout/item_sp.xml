<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="190dp"
    android:background="#9FA69F"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_Sp_img"
            android:src="@drawable/addnvien"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Sp_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:text="  Oppo a3SproXsmax"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_Sp_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="italic"
                android:gravity="center"
                android:text="20.000.000$"
                android:textColor="@color/red"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/item_Sp_ChiTiet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/chitiet" />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/item_Sp_thanhToan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/grey"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/giohang" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>