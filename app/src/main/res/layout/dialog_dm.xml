<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/css2"
        android:orientation="vertical">
        <ImageView
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/dmucc"/>

        <EditText
            android:id="@+id/dialog_Dm_maDm"
            android:hint="   Mã danh mục"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/dialog_Dm_tenDm"
            android:hint="   Tên danh mục"
            android:background="@color/lightwhite"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnhuydm"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnhuy" />
            <ImageButton
                android:id="@+id/btnthemdm"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnthem" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>